@model List<EshopBook.Models.Books>

@{
    ViewData["Title"] = "کتاب ها";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">کتاب فروشی آنلاین</a>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <h4 class="text-dark"><b>جست و جوی کتاب</b></h4>
            </li>
        </ul>
    </div>
</nav>

<div class="text-center">
    <div class="card">
        @foreach (var item in Model)
        {
            <div class="card-header bg-dark text-white">
                <h4>@item.BookName</h4>
            </div>
            <div class="card-body">
                <h6><b>نویسنده: </b> @item.BookAuthor</h6>
                <hr />
                <h6><b>شابک: </b> @item.BookShabak</h6>
                <hr />
                <h6><b>تاریخ انتشار: </b> @item.BookRelease.ToShortDateString()</h6>
                <hr />
                <h6><b>قیمت: </b> @item.BookPrice تومان</h6>
            </div>
        }

    </div>
</div>

